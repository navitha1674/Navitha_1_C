    mini length = 8
    special characters = r"[!@#$%^&*(),.?\":{}|<>]"

    length_check = len(password) >= min_length
    upper_check = any(char.isupper() for char in password)
    lower_check = any(char.islower() for char in password)
    number_check = any(char.isdigit() for char in password)
    special_check = re.search(special_characters, password)

    if all([length_check, upper_check, lower_check, number_check, special_check]):
        return "Password is valid!"
    else:
        issues = []
        if not length_check:
            issues.append(f"at least {min_length} characters long")
        if not upper_check:
            issues.append("contain at least one uppercase letter")
        if not lower_check:
            issues.append("contain at least one lowercase letter")
        if not number_check:
            issues.append("contain at least one number")
        if not special_check:
            issues.append("contain at least one special character")
        return f"Password is invalid. It must {', '.join(issues)}."
